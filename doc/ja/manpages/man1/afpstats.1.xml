<refentry id="afpstats.1">
  <refmeta>
    <refentrytitle>afpstats</refentrytitle>

    <manvolnum>1</manvolnum>

    <refmiscinfo class="date">24 Mar 2013</refmiscinfo>

    <refmiscinfo class="source">@NETATALK_VERSION@</refmiscinfo>
